<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >
    <ImageView
        android:id="@+id/rowImgGenero"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"></ImageView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageButton
                android:id="@+id/rowBtnFavorito"
                android:src="@android:drawable/btn_star_big_off"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"></ImageButton>
            <TextView
                android:id="@+id/rowTitulo"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            </TextView>
            <ProgressBar
                android:id="@+id/rowRating"
                style="?android:attr/progressBarStyleHorizontal"
                android:min="0"
                android:max="100"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"></ProgressBar>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <RatingBar
            android:id="@+id/rowCalificacion"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"></RatingBar>
        <Button
            android:id="@+id/rowBtnElegir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Button>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>