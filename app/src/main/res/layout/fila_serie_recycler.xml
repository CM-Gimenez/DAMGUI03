<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardSerie"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardBackgroundColor="@color/fondoCard"
        card_view:cardCornerRadius="15dp"
        card_view:cardElevation="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/rowImgGenero"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></ImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageButton
                    android:id="@+id/rowBtnFavorito"
                    android:src="@android:drawable/btn_star_big_off"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"></ImageButton>
                <TextView
                    android:id="@+id/rowTitulo"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/texto"
                    android:textSize="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                </TextView>
                <ProgressBar
                    android:id="@+id/rowRating"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:min="0"
                    android:max="100"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"></ProgressBar>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <RatingBar
                    android:id="@+id/rowCalificacion"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"></RatingBar>
                <Button
                    android:id="@+id/rowBtnElegir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="play >">
                </Button>
            </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>