<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ejemplo Listas!"
         />

    <Button
        android:id="@+id/btnLista1"
        android:background="@color/colorBotones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Elegir Serie Lista">
    </Button>
    <Button
        android:id="@+id/btnELegirRecycler"
        android:background="@color/colorBotones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Elegir Serie Recycler">
    </Button>
    <TextView
        android:layout_margin="@dimen/margen"
        android:id="@+id/peliculaElegida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-"></TextView>

</LinearLayout>